using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Enemy : MonoBehaviour
{
    public int HP = 100;
    private int currentHP;
    void Start()
    {
        currentHP = HP;
    }
    public void TakeDamage(int damage)
    {
        currentHP -= damage;
        Debug.Log(currentHP);

        if(currentHP <= 0)
        {
            Destroy(gameObject);
        }
    }


}
