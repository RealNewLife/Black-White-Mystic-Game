using System.Collections;
using System.Collections.Generic;
using System.Linq;
using UnityEngine;
using UnityEngine.InputSystem;
using static UnityEngine.InputSystem.InputAction;

public class PlayerInputHandler : MonoBehaviour
{
    private PlayerInput playerInput;
    private controllerPlayer controllerPlayer;
    private controllerPlayer2 controllerPlayer2;
    private playerAttack playerAttack;
    private void Awake()
    {
        playerInput = GetComponent<PlayerInput>();
        var controllerPlayers = FindObjectsOfType<controllerPlayer>();
        var controllerPlayers2 = FindObjectsOfType<controllerPlayer2>();
        var playerAttacks = FindObjectsOfType<playerAttack>();
        var index = playerInput.playerIndex;
        controllerPlayer = controllerPlayers.FirstOrDefault(m => m.GetPlayerIndex() == index);
        controllerPlayer2 = controllerPlayers2.FirstOrDefault(m => m.GetPlayerIndex() == index);
        playerAttack = playerAttacks.FirstOrDefault(m => m.GetPlayerIndex() == index);
    }

    public void OnMove(CallbackContext context)
    {
        if (controllerPlayer != null)
            controllerPlayer.SetInputVector(context.ReadValue<Vector2>());
        if (controllerPlayer2 != null)
            controllerPlayer2.SetInputVector(context.ReadValue<Vector2>());
    }
    public void OnJump(CallbackContext context)
    {
        if (controllerPlayer != null)
            controllerPlayer.SetInputJump(context.started);
        if (controllerPlayer2 != null)
            controllerPlayer2.SetInputJump(context.started);
    }

    public void OnAttack(CallbackContext context)
    {
        if (playerAttack != null)
            playerAttack.SetInputAttack(context.started);
    }
}
